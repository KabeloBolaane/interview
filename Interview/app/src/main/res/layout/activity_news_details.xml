<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/news_parent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

        <ImageView
                android:id="@+id/journalistphoto"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/abc_vector_test" />

        <RelativeLayout
                android:id="@+id/news_info_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/journalistphoto"
                android:gravity="center_vertical"
                android:paddingStart="5dp">

            <RelativeLayout
                    android:id="@+id/product_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/storytitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"

                        android:ellipsize="end"
                        android:lines="1"
                        android:text="News Title"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>




                        <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:ellipsize="end"
                android:background="@drawable/abc_vector_test" />


            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/news_second_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_first_row"
                    android:layout_marginTop="4dp">

                <TextView
                        android:id="@+id/byliner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"

                        android:ellipsize="end"
                        android:lines="1"
                        android:text="Journalist Name"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>


            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/news_third_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp">

                <TextView
                        android:id="@+id/datet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"

                        android:ellipsize="end"
                        android:lines="1"
                        android:text="2021/08/19"
                        android:textColor="@color/black"
                        android:textSize="15dp"/>


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>